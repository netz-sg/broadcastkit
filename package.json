{
    "name": "broadcastkit",
    "version": "1.4.0",
    "description": "BroadcastKit - Professionelle Stream Overlays fÃƒÂ¼r OBS mit automatischer Spielerkennung",
    "main": "dist/main/index.js",
    "scripts": {
        "dev": "concurrently -n \"MAIN,RENDERER\" -c \"cyan,magenta\" \"npm run dev:main\" \"npm run dev:renderer\"",
        "dev:main": "tsc -p tsconfig.main.json && copy src\\main\\preload.js dist\\main\\preload.js && cross-env NODE_ENV=development electron .",
        "dev:renderer": "vite",
        "build": "npm run build:main && npm run build:renderer",
        "build:main": "tsc -p tsconfig.main.json && copy src\\main\\preload.js dist\\main\\preload.js",
        "build:renderer": "vite build",
        "start": "electron .",
        "clean": "rimraf dist release",
        "dist": "npm run build && electron-builder --win",
        "dist:installer": "npm run build && electron-builder --win nsis",
        "dist:portable": "npm run build && electron-builder --win portable"
    },
    "build": {
        "appId": "com.broadcastkit.app",
        "productName": "BroadcastKit",
        "copyright": "Copyright Ã‚Â© 2024",
        "icon": "assets/icon.png",
        "directories": {
            "output": "installer"
        },
        "files": [
            "dist/**/*",
            "package.json"
        ],
        "extraResources": [
            {
                "from": "src/renderer/overlays",
                "to": "overlays"
            },
            {
                "from": "assets/icon.png",
                "to": "assets/icon.png"
            }
        ],
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "portable",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "signAndEditExecutable": false
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "BroadcastKit",
            "license": "build/license.txt",
            "include": "build/installer.nsh",
            "warningsAsErrors": false,
            "runAfterFinish": true
        },
        "portable": {
            "artifactName": "BroadcastKit-Portable.exe"
        },
        "publish": {
            "provider": "github",
            "owner": "netz-sg",
            "repo": "broadcastkit",
            "releaseType": "release"
        }
    },
    "keywords": [
        "obs",
        "overlay",
        "electron",
        "streaming"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/node": "^20.10.5",
        "@types/react": "^18.2.45",
        "@types/react-dom": "^18.2.18",
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.16",
        "concurrently": "^8.2.2",
        "cross-env": "^7.0.3",
        "electron": "^28.0.0",
        "electron-builder": "^26.0.12",
        "postcss": "^8.4.32",
        "rimraf": "^5.0.10",
        "tailwindcss": "^3.4.0",
        "typescript": "^5.3.3",
        "vite": "^5.0.8"
    },
    "dependencies": {
        "electron-log": "^5.4.3",
        "electron-store": "^8.1.0",
        "electron-updater": "^6.6.2",
        "express": "^4.18.2",
        "framer-motion": "^10.16.16",
        "obs-websocket-js": "^5.0.5",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "socket.io": "^4.6.0",
        "socket.io-client": "^4.6.0"
    }
}
